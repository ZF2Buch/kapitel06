<h1>Listing 6.15</h1>
<h3>Programmatische Konfiguration für Service-Manager mit <code>AbstractFactory</code></h3>
<pre>
&lt;?php 
// namespaces
use Zend\Debug\Debug;
use Zend\ServiceManager\ServiceManager;
use Zend\ServiceManager\Exception\ServiceNotFoundException;
use Pizza\Topping\ToppingAbstractFactory;

// initialize service manager
$serviceManager = new ServiceManager();

// configure service manager
$serviceManager->addAbstractFactory(new ToppingAbstractFactory());

// output some classes
Debug::dump($serviceManager->get('Topping-Cheese'));
Debug::dump($serviceManager->get('Topping-Salami'));

try {
    Debug::dump($serviceManager->get('Topping-Pineapple'));
} catch (ServiceNotFoundException $e) {
    echo 'Ananas ist gerade aus.';
}
